    "node-schedule": "^2.1.1",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.7",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
