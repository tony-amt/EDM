    "backup:full": "bash scripts/backup.sh full",
    "backup:incremental": "bash scripts/backup.sh incremental",
    "cleanup:images": "node scripts/cleanupImages.js",
    "cleanup:images:dry": "node scripts/cleanupImages.js --dry-run",
    "send-test-email": "node scripts/sendTestEmail.js",
    "send-multiple-test-emails": "node scripts/sendMultipleTestEmails.js",
