# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
# MONGODB_URI=mongodb://localhost:27017/amt-mail-system

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d

# 极光API配置
ENGAGELAB_BASE_URL=https://email.api.engagelab.cc/v1
ENGAGELAB_API_USER=your_api_user_here
ENGAGELAB_API_KEY=your_api_key_here
WEBHOOK_PATH=/api/webhook/mail

# 邮件任务配置
MAIL_BATCH_SIZE=50
MAIL_SEND_INTERVAL=1000
MAIL_MAX_RETRIES=3

# 日志配置
LOG_LEVEL=info
LOG_FILE=app.log

# CORS配置
CORS_ORIGIN=* 