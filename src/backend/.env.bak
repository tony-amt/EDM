# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置 - Docker环境
MONGODB_URI=mongodb://app_user:app_password@mongodb:27017/amt-mail-system

# Redis配置 - Docker环境
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your_secure_jwt_secret
JWT_EXPIRES_IN=24h

# 极光API配置
ENGAGELAB_BASE_URL=https://email.api.engagelab.cc/v1
WEBHOOK_PATH=/api/webhook/mail

# 邮件任务配置
MAIL_BATCH_SIZE=50
MAIL_SEND_INTERVAL=1000
MAIL_MAX_RETRIES=3

# 日志配置
LOG_LEVEL=info
LOG_FILE=app.log

# CORS配置
CORS_ORIGIN=*
